# Database (PostgreSQL - EU hosted)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vizinhoalert

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Hash Peppers (IMPORTANT: Change these in production!)
DEVICE_HASH_PEPPER=your-random-device-pepper-min-32-chars
VEHICLE_HASH_PEPPER=your-random-vehicle-pepper-min-32-chars

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ALERTS_PER_HOUR=10

# Push Notifications (Expo Push)
# Note: VizinhoAlert uses Expo Push API, no Firebase config needed for push
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id

# QR Code Configuration
QR_CODE_BASE_URL=https://vizinhoalert.eu/vehicle

# Application
APP_ENV=development
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
